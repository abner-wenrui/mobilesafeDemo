<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abner.mobilesafe.activity.SettingActivity">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>
    <com.abner.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.abner.mobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        mobilesafe:destitle="自动更新设置">

    </com.abner.mobilesafe.view.SettingItemView>

    <com.abner.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.abner.mobilesafe"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="归属地显示已关闭"
        mobilesafe:deson="归属地显示已开启"
        mobilesafe:destitle="电话归属地显示设置">

    </com.abner.mobilesafe.view.SettingItemView>

    <com.abner.mobilesafe.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.abner.mobilesafe.view.SettingClickView>

    <com.abner.mobilesafe.view.SettingClickView
        android:id="@+id/scv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.abner.mobilesafe.view.SettingClickView>


    <com.abner.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.abner.mobilesafe"
        android:id="@+id/siv_blacknamber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="黑名单拦截已关闭"
        mobilesafe:deson="黑名单拦截已开启"
        mobilesafe:destitle="黑名单拦截设置">

    </com.abner.mobilesafe.view.SettingItemView>
</LinearLayout>
